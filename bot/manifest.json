{
  "commands": {
    "catagories": [
      "leasure",
      "utility"
    ],
    "meme": {
      "ephemeral": false,
      "description": "returns a random meme from reddit",
      "arguments": {
        "subreddit": {
          "type": "string",
          "description": "desired subreddit",
          "required": false,
          "default": "funny"
        },
        "sorting": {
          "type": "string",
          "description": "desired sort type",
          "required": false,
          "default": "hot",
          "selection": [ "hot", "top", "new" ]
        }
      }
    },
    "stream": {
      "ephemeral": true,
      "description": "Watch content from the internet",
      "arguments": {
        "type": {
          "type": "string",
          "description": "type of content (tv/movie)",
          "required": true,
          "default": "movie",
          "selection": [ "series", "movie" ]
        },
        "title": {
          "type": "string",
          "description": "title of the content you wish to see",
          "required": true,
          "default": "Seinfeld"
        },
        "season": {
          "type": "number",
          "description": "season interger, defaults to 1",
          "required": false,
          "default": "1"
        },
        "episode": {
          "type": "number",
          "description": "episode interger, defaults to 1",
          "required": false,
          "default": "1"
        }
      }
    },
    "about": {
      "ephemeral": true,
      "description": "returns information about this bot"
    },
    "cron": {
      "ephemeral": true,
      "description": "create cron message",
      "arguments": {
        "repeat": {
          "type": "boolean",
          "description": "should this repeat",
          "required": true,
          "default": false
        },
        "message": {
          "type": "string",
          "description": "message sent when executed",
          "required": true,
          "default": false
        },
        "time": {
          "type": "string",
          "description": "time (HH:MM)",
          "required": false,
          "default": false
        },
        "date": {
          "type": "string",
          "description": "date (MM/DD)",
          "required": false,
          "default": false
        },
        "interval": {
          "type": "number",
          "description": "how often?",
          "required": false,
          "default": false,
          "selection": [
            { "key": "30 Seconds", "value": "*/30 * * * * *"},
            { "key": "1 Minute", "value": "*/1 * * * *" },
            { "key": "15 Minutes", "value": "*/15 * * * *" },
            { "key": "1 Hour", "value": " 0 * * * *" },
            { "key": "2 Hours", "value": "0 */2 * * *"}
          ]
        }
      }
    }
  }
}